{
  "compilerOptions": {
      "resolveJsonModule": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "lib": ["es2020"],
      "outDir": "./dist",
      "baseUrl": "./app",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true
  },
  "include": [
      "app/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}